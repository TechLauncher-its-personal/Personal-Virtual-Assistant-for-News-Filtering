extends layout
include ./register_mixins

block scripts
  script(src=Config.ASSET_CDN + '/javascripts/register.js')

block playout
  - stdlayout = false;

block page_name
  = _("Register")

block content
  div#page-body
    div.container-fluid#register-page
      div.row
        div.col-sm-8.col-sm-offset-2
          if error
            div.alert.alert-danger.alert-dismissible.fade.in(role='alert')
              button(type='button', data-dismiss='alert', aria-label="Close").close
                span(aria-hidden='true') ×
              if typeof error === 'string'
                p= error
              else if error.message
                p= error.message
              else
                p= String(error)

          div.login_container
            div.row
              div.col-sm-12#register-page-input
                div.login_box#content
                  +registration_form(true)
//-  
  div.row
    div.col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
      if error
        div.alert.alert-danger.alert-dismissible.fade.in(role='alert')
          button(type='button', data-dismiss='alert', aria-label="Close").close
            span(aria-hidden='true') ×
          if typeof error === 'string'
            p= error
          else if error.message
            p= error.message
          else
            p= String(error)

      +registration_form(true)
